@model Microsoft.Graph.User

    @{
        ViewData["Title"] = "DeleteUser";
    }
    

     <h3> Delete a user:</h3>


     <div class="col-12">
        <form asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
          
          
         

               <div class="form-group">
                <label class="control-label">Email:</label>
                <input asp-for="UserPrincipalName" id="text-box" class="form-control" style="padding-bottom: 5rem;
                                      padding-top: 1rem;"/>
                <span asp-validation-for="UserPrincipalName" class="text-danger"></span>
            </div>



            @Html.DisplayFor(model => model.Id)
            <div class="form-group">
                <input type="submit" value="Delete User" class="btn btn-danger" />
            </div>

            
             </form>



           
           @section Scripts      
             {

    

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



        }