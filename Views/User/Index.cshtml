@model Microsoft.Graph.IGraphServiceUsersCollectionPage

    @{
        ViewData["Title"] = "Users";
    }
    
        <h3>Users</h3>
                          <p class="d-flex">     
                              <a class="btn btn-primary nav-link m-1" asp-area="" asp-controller="User" asp-action="UserCreateForm">Create a new User</a>

                            <a class=" btn btn-info nav-link m-1" asp-area="" asp-controller="User" asp-action="UpdateUser">Update User</a>

                               <a class=" btn btn-danger nav-link m-1" asp-area="" asp-controller="User" asp-action="UserDeleteForm">Delete a User</a>
                               
                                <a class="nav-link btn m-1 p-2" asp-area="" asp-controller="User" asp-action="Home">Layout</a>
                            
                     </p>
    
    @foreach(var item in Model)
    {



        <span class="card card-body">
            <label> User:            </label>

           <p> @item.DisplayName</p>

            <label> Email:            </label>

            <p>  @item.Mail</p>

             <label>Alt. Email:</label>
            <p>  @item.UserPrincipalName</p>
            

            <hr/>
           </span> 


    }